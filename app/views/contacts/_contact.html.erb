<div id="<%= dom_id contact %>" class="bg-light p-4 rounded">
  
  <h3><%= contact.first_name %> <%= contact.last_name %></h3>
  <p><%= contact.email %></p>
  <p><%= contact.phone %></p>
  <p><%= contact.threads %></p>

  <div class="d-flex gap-2">
    <%= link_to "Edit", edit_contact_path(contact), class: "btn btn-secondary" %>
  <%= button_to "Delete this contact", @contact, method: :delete, class: "btn btn-danger" %>
  </div>
  
</div>