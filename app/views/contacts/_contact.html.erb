<div id="<%= dom_id contact %>" class="bg-light my-2 p-4 rounded">

  <h3>
    <%= contact.first_name %>
      <%= contact.last_name %>
  </h3>
  <p><strong>Email:</strong>
    <%= contact.email %>
  </p>
  <p><strong>Phone:</strong>
    <%= contact.phone %>
  </p>
  <p><strong>Threads:</strong>
    <%= contact.threads %>
  </p>

  <div class="d-flex gap-2">
    <%= link_to "Edit" , edit_contact_path(contact), class: "btn btn-secondary" %>
      <%= button_to "Delete this contact" , @contact, method: :delete, class: "btn btn-danger" %>
  </div>

</div>